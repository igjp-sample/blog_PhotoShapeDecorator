<Window x:Class="PhotoShapeDecorator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoShapeDecorator"
        xmlns:ig="http://schemas.infragistics.com/xaml"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- 左側: シェイプエリア -->
        <Border Grid.Column="0" Background="WhiteSmoke" Margin="10">
            <StackPanel>
                <TextBlock Text="シェイプエリア" 
                          VerticalAlignment="Top" 
                          HorizontalAlignment="Center"
                          Margin="10" FontWeight="Bold"/>

                <!-- シェイプを配置するキャンバス -->
                <Canvas x:Name="ShapeCanvas" Height="400" Background="White" Margin="10">
                    <!-- 円形シェイプ -->
                    <Ellipse x:Name="CircleShape" 
                            Width="60" 
                            Height="60" 
                            Fill="Red" 
                            Stroke="DarkRed" 
                            StrokeThickness="2"
                            Canvas.Left="70"
                            Canvas.Top="30"
                            Cursor="Hand">
                        <!-- DragSource に Drop イベントを設定 -->
                        <ig:DragDropManager.DragSource>
                            <ig:DragSource IsDraggable="True" 
                                          DragChannels="ShapeChannel"
                                          Drop="DragSource_Drop"/>
                        </ig:DragDropManager.DragSource>
                    </Ellipse>
                </Canvas>
            </StackPanel>
        </Border>

        <!-- 中央: 写真エリア -->
        <Border Grid.Column="1" Background="White" Margin="10" BorderBrush="DodgerBlue" BorderThickness="2">
            <Grid>
                <TextBlock Text="写真エリア" 
                          VerticalAlignment="Top" 
                          HorizontalAlignment="Center"
                          Margin="10" FontWeight="Bold" Panel.ZIndex="100"/>

                <!-- 背景画像表示用 -->
                <Canvas x:Name="PhotoCanvas" Background="Gray">
                    <Image x:Name="BackgroundImage" 
                          Stretch="Uniform"
                          Canvas.Left="0" 
                          Canvas.Top="0"/>

                    <!-- DropTarget（Drop イベントは不要） -->
                    <ig:DragDropManager.DropTarget>
                        <ig:DropTarget IsDropTarget="True" DropChannels="ShapeChannel"/>
                    </ig:DragDropManager.DropTarget>
                </Canvas>
            </Grid>
        </Border>

        <!-- 右側: コントロールエリア -->
        <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Top">
            <!-- ゴミ箱エリア -->
            <Border x:Name="TrashArea" Background="LightCoral" Height="150" Margin="0,0,0,20">
                <StackPanel Orientation="Vertical" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">
                    <TextBlock Text="🗑️" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="ゴミ箱"
                   HorizontalAlignment="Center"
                   FontWeight="Bold" FontSize="16" Margin="0,5,0,0"/>
                    <TextBlock Text="（ドロップして削除）"
                   HorizontalAlignment="Center"
                   FontSize="12" Margin="0,5,0,0"/>
                </StackPanel>
                <!-- DropTarget を追加（Drop プロパティなし） -->
                <ig:DragDropManager.DropTarget>
                    <ig:DropTarget IsDropTarget="True" 
                       DropChannels="ShapeChannel"/>
                </ig:DragDropManager.DropTarget>
            </Border>

            <!-- 背景を選ぶボタン -->
            <Button x:Name="SelectBackgroundButton" 
                   Content="背景を選ぶ" 
                   Height="50" 
                   Margin="0,0,0,10"
                   Background="DarkCyan" 
                   Foreground="White"
                   FontSize="16"
                   Click="SelectBackgroundButton_Click"/>

            <!-- 画像保存ボタン (将来実装) -->
            <Button x:Name="SaveImageButton" 
                   Content="画像保存" 
                   Height="50"
                   Background="ForestGreen" 
                   Foreground="White"
                   FontSize="16"
                   Click="SaveImageButton_Click"
                   IsEnabled="False"/>
        </StackPanel>

        <!-- ゴースト表示用の透明なオーバーレイCanvas（最前面に配置） -->
        <Canvas x:Name="GhostOverlay" 
            IsHitTestVisible="False" 
            Background="Transparent"
            Panel.ZIndex="10000"/>
    </Grid>
</Window>
